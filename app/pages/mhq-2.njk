{% extends 'layouts/layout.njk' %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = 'Mental Health Questionnaire' | safe,
        subtitle = 'Assessment' | safe,
        info = '<a href="#">&lt;&nbsp;&nbsp;Back to my assessment</a>' | safe,
        duration = 15,
        step = 1,
        steps = 5
      )
    }}

    <article>
      <h1 class="h2">In your life have you suffered from a period of mental distress that prevented you from doing your usual activities?</h1>
      {% call form.form('mhq-form', 'mhq-1.html', 'mhq-3.html', 'Go back', 'Continue') %}
        {{ form.radios('mental-stress', '', ['Yes', 'No', 'I don\'t know'], required=true) }}
        {{ form.skip('mhq-3.html', 'Prefer not to say') }}
      {% endcall %}
    </article>

    {{ section.footer( info = '<a id="exit-home-open" class="modal-open" href="#exit-home">Exit assessment and return to home page</a>' | safe ) }}

  </section>
{% endblock %}
