{% extends "layouts/layout.njk" %}

{% import "macros/section.njk" as section %}
{% import "macros/form.njk" as form %}

{% set page = {
    previous: "/",
    next: "physical-fitness-1a.html"
  }
%}

{% block content %}
  <section id="sign-up" class="panel panel--progress">

    {{ section.header(
        title = "Physical fitness measures",
        info = "<a href=\"#\">Why is this important?</a>" | safe,
        step = 1,
        steps = 5
      )
    }}

    <article>
      <h1>Chair stand test</h1>
      <div class="video">
        <div class="video-wrapper">
          <iframe src="http://www.youtube.com/embed/8ItNE_DX6Cc?showinfo=0&iv_load_policy=3&controls=0" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>
      <p>After watching this video, enter how many times you are able to stand up and sit down from a chair within 30 seconds. Please use a standard armchair (typically 17‚Äù or 43cm high).</p>
      <form id="register" method="get" action="{{ page.next }}">
        {{ form.text("chair-stand-number", "Number of chair stands completed in 30 seconds", "number") }}
        {{ form.yesno("help", "Did you require support from your hands when standing?") }}
        {{ form.slider("how-easy", "Please rate how difficult you found this test - 0 being effortless and 10 being maximum difficulty.", 0, 10, 1, "", "Minimum effort", "Maximum effort") }}
        {{ form.actions( page.previous, page.next ) }}
      </form>
    </article>

    {{ section.footer( info = "<a href=\"/\">Cancel and return to home page</a>" | safe ) }}

  </section>
{% endblock %}
