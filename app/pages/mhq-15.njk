{% extends 'layouts/layout.njk' %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = 'Mental Health Questionnaire' | safe,
        subtitle = 'Assessment' | safe,
        info = '<a href="#">Tooltip link</a>' | safe,
        duration = 15,
        step = 1,
        steps = 5
      )
    }}

    <article>
      <h1 class="h2">About how old were you the FIRST time you had a period of two weeks like this? (Whether or not you received any help for it.)</h1>
      {% call form.form('mhq-form', 'mhq-14.html', 'mhq-16.html', 'Go back', 'Continue') %}
        {{ form.text(type='number', 'how-old', placeholder='e.g. 18', required=true) }}
        {{ form.skip_page('mhq-16.html', 'Prefer not to say') }}
      {% endcall %}
    </article>

    {{ section.footer( info = '<a id="exit-home-open" class="modal-open" href="#exit-home">Exit assessment and return to home page</a>' | safe ) }}

  </section>
{% endblock %}
