{% extends 'layouts/layout.njk' %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = 'Mental Health Questionnaire' | safe,
        subtitle = 'Assessment' | safe,
        info = '<a href="#">&lt;&nbsp;&nbsp;Back to my assessment</a>' | safe,
        duration = 15,
        step = 1,
        steps = 5
      )
    }}

    <article>
      <h1 class="h2">How many children have you had?</h1>
      {% call form.form('mhq-form', 'mhq-18.html', 'mhq-20.html', 'Go back', 'Continue') %}
        {{ form.select_slider('children', '', ['', '0', '1', '2', '3', '4', '5', '6+'], required=true) }}
        {{ form.skip_page('mhq-20.html', 'Prefer not to say') }}
      {% endcall %}
    </article>

    {{ section.footer( info = '<a id="exit-home-open" class="modal-open" href="#exit-home">Exit assessment and return to home page</a>' | safe ) }}

  </section>
{% endblock %}
