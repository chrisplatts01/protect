{% extends 'layouts/layout.njk' %}

{% block content %}
  <section class="panel panel--progress">

    {{ section.header(
        title = 'Mental Health Questionnaire' | safe,
        subtitle = 'Assessment' | safe,
        info = '<a href="#">&lt;&nbsp;&nbsp;Back to my assessment</a>' | safe,
        duration = 15,
        step = 1,
        steps = 5
      )
    }}

    <article>
      <h1 class="h2">Have you been addicted to illicit or recreational drugs?</h1>
      {% call form.form('mhq-form', 'mhq-23.html', 'mhq-24a.html', 'Go back', 'Continue') %}
        {{ form.select_group('drug-addiction', '', ['Yes', 'No', 'Don\'t know'], required=true) }}
        {{ form.skip_page('mhq-24a.html', 'Prefer not to say') }}
      {% endcall %}
    </article>

    {{ section.footer( info = '<a id="exit-home-open" class="modal-open" href="#exit-home">Exit assessment and return to home page</a>' | safe ) }}

  </section>
{% endblock %}
