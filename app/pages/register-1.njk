{% extends "layouts/layout.njk" %}

{% import "macros/section.njk" as section %}
{% import "macros/form.njk" as form %}

{% set page = {
    previous: "/",
    next: "register-2.html"
  }
%}

{% block content %}
  <section id="sign-up" class="panel panel--progress">

    {{ section.header(
        title = "Register for the study",
        info = "<a href=\"#\">What happens to my data?</a>" | safe,
        step = 1,
        steps = 5
      )
    }}

    <article>
      <h1>Please enter your name and email address</h1>
      <form id="register" method="get" action="{{ page.next }}">
        <div class="form-field-inline-group">
          <div class="form-field form-field--text">
            <label for="first-name">First name</label>
            <input id="first-name" type="text">
          </div>
          <div class="form-field form-field--text">
            <label for="last-name">Last name</label>
            <input id="last-name" type="text">
          </div>
        </div>
        <div class="form-field-group">
          <div class="form-field form-field--email">
            <label for="email">Email address</label>
            <input id="email" type="email">
          </div>
        </div>
        {{ form.actions( page.previous, page.next ) }}
      </form>
    </article>

    {{ section.footer( info = "<a href=\"/\">Cancel and return to home page</a>" | safe ) }}

  </section>
{% endblock %}
