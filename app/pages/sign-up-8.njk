{% extends "layouts/layout.njk" %}

{% set section = {
    title: "Sign up to the study",
    id: "sign-up",
    class: "panel--progress",
    steps: {
      done: 8,
      total: 9
    },
    duration: 15,
    progress: {
      time: true,
      info: true,
      bar: true,
      steps: true,
      cancel: true
    },
    page: {
      previous: "sign-up-7.html",
      next: "sign-up-9.html"
    }
  }
%}


{% block content %}
  <section id="sign-up" class="panel panel--progress">
    {% include "includes/panel-header.njk" %}
    <article>
      <h1>Please check that the information we have about you is correct</h1>
      <form id="sign-up" method="get" action="{{ section.page.next }}">
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="name">Name</label>
            <input id="name" type="text" value="John Smith">
            <div class="form-field-value">John Smith</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="email-address">Email address</label>
            <input id="email" type="email" value="john.smith@gmail.com">
            <div class="form-field-value">john.smith@gmail.com</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="address">Address</label>
            <input id="address" type="text" value="11 Main Street, Anytown, ZZ1 1ZZ">
            <div class="form-field-value">11 Main Street, Anytown, ZZ1 1ZZ</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="xxxxx">Date of birth</label>
            <input id="xxxxx" type="text" value="xxxxx">
            <div class="form-field-value">xxxxx</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="sex">Sex</label>
            <input id="sex" type="text" value="Male">
            <div class="form-field-value">Male</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="angina">Ongoing angina on a weekly basis</label>
            <input id="angina" type="text" value="No">
            <div class="form-field-value">No</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="cardio">Suffered in the last 3 months</label>
            <input id="cardio" type="text" value="Stroke">
            <div class="form-field-value">Stroke</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="breathlessness">Breathlessness at rest</label>
            <input id="breathlessness" type="text" value="No">
            <div class="form-field-value">No</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="emphysema">Emphysema or COPD</label>
            <input id="emphysema" type="text" value="No">
            <div class="form-field-value">No</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="falls">Falls in the last 12 months</label>
            <input id="falls" type="text" value="No">
            <div class="form-field-value">No</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-field-row">
          <div class="form-field-summary">
            <label for="walking-aid">Use of walking aid</label>
            <input id="walking-aid" type="text" value="No">
            <div class="form-field-value">No</div>
          </div>
          <div class="form-field-edit">
            <a href="#">Edit</a>
          </div>
        </div>
        <div class="form-actions">
          <a class="button button--back secondary" href="{{ section.page.previous }}">Go back</a>
          <button class="button button--next" type="submit">Continue</button>
        </div>
      </form>
    </article>
    {% include "includes/panel-footer.njk" %}
  </section>
{% endblock %}

