{% macro text(
    name = "FIELD_NAME",
    label = "FIELD_LABEL",
    type = "text",
    value = ""
  )
%}
<div class="form-field form-field--text">
  <label for="{{ name }}">{{ label }}</label>
  <input id="{{ name }}" name="{{ name }}" type="{{ type }}" value="{{ value }}">
</div>
{% endmacro %}

