{#
========================================
Field: Text input - note if type="date"
       a JQuery UI date widget is used
========================================
#}
{% macro text(
    name  = "FIELD_NAME",
    label = "FIELD_LABEL",
    type  = "text",
    value = "",
    required = "",
    changeMonth = false,
    changeYear = true
  )
%}

<div class="form-field form-field--text">
  <label for="{{ name }}">{{ label }}</label>
  {% if type == "date" %}
  <input id="{{ name }}" name="{{ name }}" type="text" data-type="date" value="{{ value }}" {% if type=="date" %}placeholder="dd/mm/yyyy" data-change-month="{{ changeMonth }}" data-change-year="{{ changeYear }}"{% endif %} {% if required %}"required"{% endif %}>
  {% else %}
  <input id="{{ name }}" name="{{ name }}" type="{{ type }}" value="{{ value }}" {% if type=="date" %}placeholder="dd/mm/yyyy" data-change-month="{{ changeMonth }}" data-change-year="{{ changeYear }}"{% endif %} {% if required %}"required"{% endif %}>
  {% endif %}
</div>
{% endmacro %}

{#
========================================
Field group: Inline text input
========================================
#}
{% macro text2(
    label = "FIELD_LABEL",
    name1 = "FIELD_NAME_1",
    label1 = "FIELD_LABEL_1",
    type1 = "text",
    value1 = "",
    name2 = "FIELD_NAME_2",
    label2 = "FIELD_LABEL_2",
    type2 = "text",
    value2 = "",
    required = ""
  )
%}
<div class="form-field-group">
  {% if label %}<label>{{ label }}</label>{% endif %}
  <div class="form-field-inline-group">
    <div class="form-field form-field--text">
      <label for="{{ name1 }}">{{ label1 }}</label>
      <input id="{{ name1 }}" name="{{ name1 }}" type="{{ type1 }}" value="{{ value1 }}" {% if required %}"required"{% endif %}>
    </div>
    <div class="form-field form-field--text">
      <label for="{{ name2 }}">{{ label2 }}</label>
      <input id="{{ name2 }}" name="{{ name2 }}" type="{{ type2 }}" value="{{ value2 }}" {% if required %}"required"{% endif %}>
    </div>
  </div>
</div>
{% endmacro %}
