<header id="page-header" role="banner">
  <div class="wrapper">
    <div class="site-logo"><img src="/images/protect-logo.svg" alt="TRAIN FOR THE BRAIN"></div>
  </div>
</header>

<nav id="site-menu">
  <div id="menu-toggle" class="menu-toggle">Menu</div>
  <div class="menu-content">
    <div id="site-security" class="site-security">
      <div class="wrapper">
        <a class="login" href="#">Login</a>
        <a href="#" class="sign-up button button--grey">Sign up</a>
      </div>
    </div>
    <div id="site-navigation" class="site-navigation">
      <div class="wrapper">
        <ul>
          <li><a href="#">Who can sign up</a></li>
          <li><a href="#">Our Data Promise</a></li>
          <li><a href="#">The PROTECT Team</a></li>
          <li><a href="#">Contact us</a></li>
        </ul>
      </div>
    </div>
  </div>
</nav>

<script>
  (function($) {

    var $menuToggle = $('#menu-toggle');
    var $siteSecurity = $('#site-security');
    var $siteNavigation = $('#site-navigation');

    $menuToggle.on('click', function() {
      var $this = $(this);

      $this.toggleClass('open');

      if ($this.hasClass('open')) {
        $this.text('Close');
        $siteSecurity.slideDown('slow');
        $siteNavigation.slideDown('slow');
      } else {
        $this.text('Menu');
        $siteSecurity.slideUp('slow');
        $siteNavigation.slideUp('slow');
      }
    });

  })(jQuery);
</script>
